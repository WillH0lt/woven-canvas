{
  "private": false,
  "name": "@infinitecanvas/core",
  "version": "0.1.0",
  "description": "Demo library that contains common utility functions",
  "repository": "https://github.com/jkomyno/pnpm-monorepo-example.git",
  "author": {
    "name": "Alberto Schiabel",
    "email": "alberto.schiabel@gmail.com"
  },
  "files": [
    "build"
  ],
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "__exports-comment": "// Define output files for Node.js export maps (https://nodejs.org/api/packages.html#exports)",
  "exports": {
    ".": {
      "import": {
        "@infinitecanvas/source": "./src/index.ts",
        "types": "./build/index.d.mts",
        "import": "./build/index.mjs",
        "default": "./build/index.mjs"
      },
      "require": {
        "@infinitecanvas/source": "./src/index.ts",
        "types": "./build/index.d.ts",
        "import": "./build/index.js",
        "default": "./build/index.js"
      }
    },
    "./helpers": {
      "types": "./build/helpers/index.d.ts",
      "import": {
        "@infinitecanvas/source": "./src/helpers/index.ts",
        "types": "./build/helpers/index.d.mts",
        "default": "./build/helpers/index.mjs"
      },
      "require": {
        "@infinitecanvas/source": "./src/helpers/index.ts",
        "types": "./build/helpers/index.d.ts",
        "default": "./build/helpers/index.js"
      },
      "default": "./build/helpers/index.js"
    },
    "./components": {
      "types": "./build/components/index.d.ts",
      "import": {
        "@infinitecanvas/source": "./src/components/index.ts",
        "types": "./build/components/index.d.mts",
        "default": "./build/components/index.mjs"
      },
      "require": {
        "@infinitecanvas/source": "./src/components/index.ts",
        "types": "./build/components/index.d.ts",
        "default": "./build/components/index.js"
      },
      "default": "./build/components/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf build .turbo",
    "build": "tsup ./src/index.ts ./src/helpers/index.ts ./src/components/index.ts --tsconfig ./tsconfig.build.json --config ../../tsup.config.ts",
    "build:watch": "pnpm build --watch",
    "check:exports": "attw --pack .",
    "test": "vitest  --config ../../vitest.config.ts run",
    "test:watch": "vitest  --config ../../vitest.config.ts run --watch"
  },
  "dependencies": {
    "@lastolivegames/becsy": "^0.15.5",
    "@preact/signals-core": "^1.10.0",
    "immer": "^10.1.1",
    "lexorank": "^1.0.5",
    "signia": "^0.1.5",
    "strict-event-emitter": "^0.5.1",
    "xstate": "^5.19.4",
    "zod": "^3.25.36",
    "zustand": "^5.0.5"
  }
}
