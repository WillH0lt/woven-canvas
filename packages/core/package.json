{
  "name": "@woven-canvas/core",
  "version": "0.1.1",
  "description": "Framework-agnostic editor library built on ECS",
  "repository": {
    "type": "git",
    "url": "https://github.com/WillH0lt/woven-canvas"
  },
  "license": "MIT",
  "homepage": "https://github.com/WillH0lt/woven-canvas",
  "author": {
    "name": "Will Holt",
    "email": "will@william.land"
  },
  "files": [
    "build",
    "LICENSE"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "@woven-canvas/source": "./src/index.ts",
      "import": {
        "types": "./build/index.d.ts",
        "default": "./build/index.js"
      },
      "require": {
        "types": "./build/index.d.cts",
        "default": "./build/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf build .turbo",
    "build": "tsup ./src/index.ts --tsconfig ./tsconfig.build.json --config ../../tsup.config.ts",
    "build:watch": "pnpm build --watch",
    "check:exports": "attw --pack .",
    "test": "vitest --config ../../vitest.config.ts run",
    "test:watch": "vitest --config ../../vitest.config.ts --watch",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@woven-canvas/math": "workspace:*",
    "@woven-ecs/canvas-store": "^1.0.3",
    "@woven-ecs/core": "^1.0.1",
    "fractional-indexing-jittered": "^1.0.0",
    "xstate": "^5.24.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "vitest": "^4.0.7"
  },
  "type": "module",
  "peerDependencies": {
    "typescript": "^5"
  }
}
