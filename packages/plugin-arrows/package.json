{
  "private": true,
  "name": "@infinitecanvas/plugin-arrows",
  "version": "0.1.0",
  "description": "Arrows plugin - draw and edit arc and elbow arrows for infinite canvas",
  "files": [
    "build"
  ],
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "@infinitecanvas/source": "./src/index.ts",
      "import": {
        "types": "./build/index.d.ts",
        "default": "./build/index.js"
      },
      "require": {
        "types": "./build/index.d.cts",
        "default": "./build/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf build .turbo",
    "build": "tsup ./src/index.ts --tsconfig ./tsconfig.build.json --config ../../tsup.config.ts",
    "build:watch": "pnpm build --watch",
    "check:exports": "attw --pack ."
  },
  "dependencies": {
    "@infinitecanvas/core": "workspace:*",
    "@infinitecanvas/math": "workspace:*",
    "@infinitecanvas/plugin-selection": "workspace:*",
    "fractional-indexing-jittered": "^1.0.0",
    "xstate": "^5.24.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "resize-observer-polyfill": "^1.5.1",
    "vitest": "^4.0.7"
  },
  "type": "module",
  "peerDependencies": {
    "typescript": "^5"
  }
}
