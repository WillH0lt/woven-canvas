{
  "private": false,
  "name": "@infinitecanvas/extension-text",
  "version": "0.1.0",
  "description": "Demo library that contains common utility functions",
  "repository": "https://github.com/jkomyno/pnpm-monorepo-example.git",
  "author": {
    "name": "Alberto Schiabel",
    "email": "alberto.schiabel@gmail.com"
  },
  "files": [
    "build"
  ],
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "__exports-comment": "// Define output files for Node.js export maps (https://nodejs.org/api/packages.html#exports)",
  "exports": {
    ".": {
      "import": {
        "@infinitecanvas/source": "./src/index.ts",
        "types": "./build/index.d.mts",
        "import": "./build/index.mjs",
        "default": "./build/index.mjs"
      },
      "require": {
        "@infinitecanvas/source": "./src/index.ts",
        "types": "./build/index.d.ts",
        "import": "./build/index.js",
        "default": "./build/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf build .turbo",
    "build": "tsup ./src/index.ts --tsconfig ./tsconfig.build.json --config ../../tsup.config.ts",
    "build:watch": "pnpm build --watch",
    "check:exports": "attw --pack .",
    "test": "vitest  --config ../../vitest.config.ts run",
    "test:watch": "vitest  --config ../../vitest.config.ts run --watch"
  },
  "dependencies": {
    "@infinitecanvas/core": "workspace:^",
    "@lastolivegames/becsy": "^0.15.5",
    "@lit-labs/preact-signals": "^1.0.3",
    "@preact/signals-core": "^1.10.0",
    "@tiptap/core": "^3.0.7",
    "@tiptap/extension-bold": "^3.0.7",
    "@tiptap/extension-color": "^3.0.7",
    "@tiptap/extension-document": "^3.0.1",
    "@tiptap/extension-history": "^3.0.1",
    "@tiptap/extension-italic": "^3.0.7",
    "@tiptap/extension-paragraph": "^3.0.1",
    "@tiptap/extension-text": "^3.0.1",
    "@tiptap/extension-text-align": "^3.0.7",
    "@tiptap/extension-text-style": "^3.0.7",
    "@tiptap/extension-underline": "^3.0.7",
    "lit": "^3.3.0",
    "tinycolor2": "^1.6.0",
    "zod": "^3.25.36"
  },
  "devDependencies": {
    "@types/tinycolor2": "^1.4.6",
    "vitest": "^3.1.4"
  }
}
