{
  "name": "@woven-canvas/vue",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "dist/jet-ui.cjs.js",
  "module": "dist/jet-ui.es.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "@woven-canvas/source": "./src/index.ts",
      "import": {
        "types": "./build/index.d.ts",
        "default": "./build/index.js"
      },
      "require": {
        "types": "./build/index.d.cts",
        "default": "./build/index.cjs"
      }
    },
    "./theme.css": "./src/theme.css",
    "./package.json": "./package.json"
  },
  "style": "dist/style.css",
  "scripts": {
    "dev": "vite",
    "build": "vite build && vue-tsc --declaration --emitDeclarationOnly",
    "preview": "vite preview",
    "tsc": "vue-tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@floating-ui/vue": "^1.1.6",
    "@woven-canvas/asset-sync": "workspace:^",
    "@woven-canvas/core": "workspace:^",
    "@woven-canvas/math": "workspace:^",
    "@woven-canvas/plugin-arrows": "workspace:^",
    "@woven-canvas/plugin-canvas-controls": "workspace:^",
    "@woven-canvas/plugin-eraser": "workspace:^",
    "@woven-canvas/plugin-pen": "workspace:^",
    "@woven-canvas/plugin-selection": "workspace:^",
    "@woven-canvas/plugin-shapes": "workspace:^",
    "@tiptap/core": "^3.15.3",
    "@tiptap/extension-bold": "^3.15.3",
    "@tiptap/extension-color": "^3.10.1",
    "@tiptap/extension-document": "^3.15.3",
    "@tiptap/extension-italic": "^3.15.3",
    "@tiptap/extension-paragraph": "^3.15.3",
    "@tiptap/extension-text": "^3.15.3",
    "@tiptap/extension-text-align": "^3.15.3",
    "@tiptap/extension-text-style": "^3.15.3",
    "@tiptap/extension-underline": "^3.15.3",
    "@tiptap/extensions": "^3.15.3",
    "@tiptap/vue-3": "^3.15.3",
    "@vueuse/core": "^14.0.0",
    "@woven-ecs/canvas-store": "^1.0.1",
    "perfect-freehand": "^1.2.2",
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/test-utils": "^2.4.6",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vitest": "^4.0.7",
    "vue-tsc": "^2.2.12"
  }
}
