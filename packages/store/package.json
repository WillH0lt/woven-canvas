{
  "private": true,
  "name": "@infinitecanvas/store",
  "version": "0.1.0",
  "description": "Local-first store adapter using Loro CRDT for persistence and multiplayer",
  "files": [
    "build"
  ],
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "__exports-comment": "// Define output files for Node.js export maps (https://nodejs.org/api/packages.html#exports)",
  "exports": {
    ".": {
      "import": {
        "@infinitecanvas/source": "./src/index.ts",
        "types": "./build/index.d.mts",
        "import": "./build/index.mjs",
        "default": "./build/index.mjs"
      },
      "require": {
        "@infinitecanvas/source": "./src/index.ts",
        "types": "./build/index.d.ts",
        "import": "./build/index.js",
        "default": "./build/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf build .turbo",
    "build": "tsup ./src/index.ts --tsconfig ./tsconfig.build.json --config ../../tsup.config.ts",
    "build:watch": "pnpm build --watch",
    "check:exports": "attw --pack .",
    "test": "vitest  --config ../../vitest.config.ts run",
    "test:watch": "vitest  --config ../../vitest.config.ts run --watch"
  },
  "dependencies": {
    "@infinitecanvas/editor": "workspace:*",
    "idb": "^8.0.3",
    "lodash.throttle": "^4.1.1",
    "loro-adaptors": "^0.5.0",
    "loro-crdt": "^1.10.3",
    "loro-websocket": "^0.5.0"
  },
  "devDependencies": {
    "@types/lodash.throttle": "^4.1.9",
    "vitest": "^4.0.7",
    "@types/bun": "latest"
  },
  "type": "module",
  "peerDependencies": {
    "typescript": "^5"
  }
}
