{
  "name": "@woven-canvas/plugin-pen",
  "version": "0.1.0",
  "description": "Pen plugin - draw SVG ink strokes with pressure sensitivity for infinite canvas",
  "repository": {
    "type": "git",
    "url": "https://github.com/WillH0lt/woven-canvas"
  },
  "license": "MIT",
  "homepage": "https://github.com/WillH0lt/woven-canvas",
  "author": {
    "name": "Will Holt",
    "email": "will@william.land"
  },
  "files": [
    "build",
    "LICENSE"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "@woven-canvas/source": "./src/index.ts",
      "import": {
        "types": "./build/index.d.ts",
        "default": "./build/index.js"
      },
      "require": {
        "types": "./build/index.d.cts",
        "default": "./build/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf build .turbo",
    "build": "tsup ./src/index.ts --tsconfig ./tsconfig.build.json --config ../../tsup.config.ts",
    "build:watch": "pnpm build --watch",
    "check:exports": "attw --pack .",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@woven-canvas/core": "workspace:*",
    "@woven-canvas/math": "workspace:*",
    "simplify-js": "^1.2.4"
  },
  "devDependencies": {
    "resize-observer-polyfill": "^1.5.1",
    "vitest": "^4.0.7"
  },
  "type": "module",
  "peerDependencies": {
    "typescript": "^5",
    "xstate": "^5"
  }
}
