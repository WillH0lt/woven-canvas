{
  "private": true,
  "name": "@infinitecanvas/vue",
  "version": "0.1.0",
  "description": "Vue 3 adapter for Infinite Canvas",
  "files": [
    "build"
  ],
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "@infinitecanvas/source": "./src/index.ts",
      "import": {
        "types": "./build/index.d.ts",
        "default": "./build/index.js"
      },
      "require": {
        "types": "./build/index.d.cts",
        "default": "./build/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf build .turbo",
    "build": "tsup ./src/index.ts --tsconfig ./tsconfig.build.json --config ../../tsup.config.ts",
    "build:watch": "pnpm build --watch",
    "check:exports": "attw --pack .",
    "test": "vitest --config ../../vitest.config.ts run",
    "test:watch": "vitest --config ../../vitest.config.ts run --watch"
  },
  "dependencies": {
    "@infinitecanvas/editor": "workspace:*",
    "@infinitecanvas/plugin-selection": "workspace:*",
    "@infinitecanvas/plugin-canvas-controls": "workspace:*"
  },
  "devDependencies": {
    "@vue/test-utils": "^2.4.0",
    "resize-observer-polyfill": "^1.5.1",
    "vitest": "^4.0.7",
    "vue": "^3.5.0"
  },
  "peerDependencies": {
    "vue": "^3.3.0",
    "typescript": "^5"
  },
  "type": "module"
}
