{
  "private": true,
  "name": "@woven-canvas/math",
  "version": "0.1.0",
  "description": "Math utilities for 2D vector operations",
  "files": [
    "build"
  ],
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "__exports-comment": "// Define output files for Node.js export maps (https://nodejs.org/api/packages.html#exports)",
  "exports": {
    ".": {
      "@woven-canvas/source": "./src/index.ts",
      "import": {
        "types": "./build/index.d.ts",
        "default": "./build/index.js"
      },
      "require": {
        "types": "./build/index.d.cts",
        "default": "./build/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf build .turbo",
    "build": "tsup ./src/index.ts --tsconfig ./tsconfig.build.json --config ../../tsup.config.ts",
    "build:watch": "pnpm build --watch",
    "check:exports": "attw --pack .",
    "test": "vitest  --config ../../vitest.config.ts run",
    "test:watch": "vitest  --config ../../vitest.config.ts run --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "vitest": "^4.0.7",
    "@types/bun": "latest"
  },
  "type": "module",
  "peerDependencies": {
    "typescript": "^5"
  }
}
