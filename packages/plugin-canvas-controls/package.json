{
  "private": true,
  "name": "@infinitecanvas/plugin-canvas-controls",
  "version": "0.1.0",
  "description": "Canvas controls plugin - pan, zoom, and scroll for infinite canvas",
  "files": [
    "build"
  ],
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "@infinitecanvas/source": "./src/index.ts",
      "import": {
        "types": "./build/index.d.ts",
        "default": "./build/index.js"
      },
      "require": {
        "types": "./build/index.d.cts",
        "default": "./build/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf build .turbo",
    "build": "tsup ./src/index.ts --tsconfig ./tsconfig.build.json --config ../../tsup.config.ts",
    "build:watch": "pnpm build --watch",
    "check:exports": "attw --pack .",
    "test": "vitest  --config ./vitest.config.ts run",
    "test:watch": "vitest  --config ./vitest.config.ts run --watch"
  },
  "dependencies": {
    "@infinitecanvas/editor": "workspace:*",
    "@infinitecanvas/math": "workspace:*",
    "xstate": "^5.24.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "resize-observer-polyfill": "^1.5.1",
    "vitest": "^4.0.7"
  },
  "type": "module",
  "peerDependencies": {
    "typescript": "^5"
  }
}
