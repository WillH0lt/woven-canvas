{
  "private": true,
  "type": "module",
  "name": "@infinitecanvas/pnpm-monorepo-example",
  "description": "Practical example of a `TypeScript` monorepo with `pnpm`, `turborepo`, and `vitest`",
  "repository": "https://github.com/jkomyno/pnpm-monorepo-example.git",
  "author": {
    "name": "Alberto Schiabel",
    "email": "alberto.schiabel@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "pnpm": ">=8"
  },
  "scripts": {
    "build": "turbo run build",
    "build:watch": "turbo run build:watch",
    "check:exports": "turbo run check:exports",
    "clean": "turbo run clean",
    "lint:ci": "biome ci",
    "lint": "biome check --fix --unsafe",
    "test": "pnpm -r --if-present test",
    "test:watch": "pnpm -r --if-present test:watch"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@biomejs/biome": "^2.3.3",
    "@microsoft/api-extractor": "^7.54.0",
    "@types/node": "24.10.0",
    "@vitest/browser": "^4.0.7",
    "@vitest/ui": "^4.0.7",
    "esbuild-plugin-replace": "^1.4.0",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "playwright": "^1.56.1",
    "rimraf": "^6.1.0",
    "taze": "^19.9.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.7"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.{js,ts,cjs,mjs,md,json,jsonc}": "biome ci --no-errors-on-unmatched"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
