{
  "private": true,
  "type": "module",
  "name": "@woven-canvas/monorepo",
  "description": "An infinite canvas framework for TypeScript",
  "repository": "https://github.com/WillH0lt/woven-canvas",
  "author": {
    "name": "Will Holt",
    "email": "will@william.land"
  },
  "license": "MIT",
  "engines": {
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.30.1",
  "scripts": {
    "build": "turbo run build",
    "build:watch": "turbo run build:watch",
    "check:exports": "turbo run check:exports",
    "clean": "turbo run clean",
    "lint:ci": "biome ci && prettier --check \"**/*.md\"",
    "lint": "biome check --fix --unsafe && prettier --write \"**/*.md\"",
    "test": "pnpm -r --if-present test",
    "test:watch": "pnpm -r --if-present test:watch",
    "prepare": "husky"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "prettier": "^3.5.3",
    "@biomejs/biome": "^2.3.14",
    "@microsoft/api-extractor": "^7.54.0",
    "@types/node": "24.10.0",
    "@vitest/browser": "^4.0.7",
    "@vitest/ui": "^4.0.7",
    "esbuild-plugin-replace": "^1.4.0",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.6",
    "resize-observer-polyfill": "^1.5.1",
    "rimraf": "^6.1.0",
    "taze": "^19.9.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.7"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,json,jsonc,vue}": "biome ci --no-errors-on-unmatched",
    "*.md": "prettier --check"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
