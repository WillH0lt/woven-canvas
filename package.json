{
  "private": true,
  "type": "module",
  "name": "@infinitecanvas/pnpm-monorepo-example",
  "description": "Practical example of a `TypeScript` monorepo with `pnpm`, `turborepo`, and `vitest`",
  "repository": "https://github.com/jkomyno/pnpm-monorepo-example.git",
  "author": {
    "name": "Alberto Schiabel",
    "email": "alberto.schiabel@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "pnpm": ">=8"
  },
  "scripts": {
    "build": "turbo run build",
    "build:watch": "turbo run build:watch",
    "check:exports": "turbo run check:exports",
    "clean": "turbo run clean",
    "lint:ci": "biome ci",
    "lint": "biome check --fix --unsafe",
    "test": "pnpm -r --if-present test",
    "test:watch": "pnpm -r --if-present test:watch"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "@biomejs/biome": "^1.9.4",
    "@microsoft/api-extractor": "^7.52.8",
    "@types/node": "20.9.0",
    "@vitest/browser": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "esbuild-plugin-replace": "^1.4.0",
    "husky": "^9.1.7",
    "is-ci": "^3.0.1",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.11",
    "playwright": "^1.52.0",
    "rimraf": "^6.0.1",
    "taze": "^0.17.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "vitest": "^3.1.4"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.{js,ts,cjs,mjs,md,json,jsonc}": "biome ci --no-errors-on-unmatched"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
