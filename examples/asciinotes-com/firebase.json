{
  "firestore": {
    "rules": "./firebase/firestore.rules",
    "indexes": "./firebase/firestore.indexes.json"
  },
  "storage": {
    "rules": "./firebase/storage.rules"
  },
  "hosting": {
    "rewrites": [
      {
        "source": "**",
        "run": {
          "serviceId": "app",
          "region": "us-central1"
        }
      }
    ]
  },
  "emulators": {
    "auth": {
      "host": "0.0.0.0",
      "port": 9099
    },
    "firestore": {
      "host": "0.0.0.0",
      "port": 8081
    },
    "hosting": {
      "host": "0.0.0.0",
      "port": 5050
    },
    "storage": {
      "host": "0.0.0.0",
      "port": 9199
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
