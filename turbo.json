{
  "$schema": "https://turborepo.org/schema.json",
  "dangerouslyDisablePackageManagerCheck": true,
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "build:watch": {},
    "check:exports": {
      "dependsOn": ["^build"]
    },
    "app#watch": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false,
      "outputs": ["packages/*/build", "examples/*/build"]
    },
    "test:unit:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
